pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'jenkinsBranch', url: 'https://github.com/DiegoLozano/introDevops.git'
            }
        }
        stage('Build') {
	    when{
		branch 'jenkinsBranch' 
	    }

            steps {
                sh 'docker build -t jenkins/jenkins:lts'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker run -d --name jenkins -p 80:80 jenkins/jenkins:lts'
            }
        }
    }
}
